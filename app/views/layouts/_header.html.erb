<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("header.logo"), home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), home_path %></li>
        <li><%= link_to t("header.contact"), contact_path %></li>
        <li><%= link_to t("header.help"), help_path %></li>
        <li><%= link_to t("header.users"), users_path %></li>

        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.profile"), current_user %></li>
              <li><%= link_to t("header.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <%= button_to t("header.logout"), logout_path, method: :delete %>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<div class="language-switcher pull-right" style="margin-right: 20px;">
  <%= link_to t("header.english"), url_for(request.params.merge(locale: :en)) %> |
  <%= link_to t("header.vietnamese"), url_for(request.params.merge(locale: :vi)) %>
</div>
