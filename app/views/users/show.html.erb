<!-- app/views/users/show.html.erb -->

<% provide :title, @user.name %>
<div class="row" >
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %>
      <%= t(".name") %>: <%= @user.name %></h1>

      <p> <%= t(".created_at") %>: <%= l(@user.created_at, format: :long) %></p>
      <p> <%= t(".updated_at") %>: <%= l(@user.updated_at, format: :long) %></p>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3><%= t(".micropost") %> (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% end %>
  </div>
</div>
