<!-- app/views/users/show.html.erb -->

<% provide :title, @user.name %>
<div class="row" >
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= gravatar_for @user %><%= t(".name") %>: <%= @user.name %></h1>

      <p> <%= t(".created_at") %>: <%= l(@user.created_at, format: :long) %></p>
      <p> <%= t(".updated_at") %>: <%= l(@user.updated_at, format: :long) %></p>
    </section>
  </aside>
</div>
