<% provide(:title, t("users.update.title")) %>
<% provide(:button_text, t("users.update.submit")) %>

<h1><%= t("users.update.title") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render "form" %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t("users.update.avatar"), Settings.default.gravatar.email_link, target: "_blank", rel: "noopener" %>
    </div>
  </div>
</div>
