<%= form_for @micropost do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
        <%= f.text_area :content, placeholder: t("microposts.form.place_holder") %>
    </div>

    <span class="image">
        <%= f.file_field :image, accept: Settings.default.image.permit %>
    </span>
    
    <%= f.submit t("microposts.form.submit"), class: "btn btn-primary" %>
<% end %>
