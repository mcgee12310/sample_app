<% @user ||= current_user %>

<div class="stats-container">
  <%= link_to following_user_path(@user) do %>
    <strong id="following" class="stat"><%= @user.following.count %></strong><br>
    <%= t("users.following") %>
  <% end %>
  
  <%= link_to followers_user_path(@user) do %>
    <strong id="followers" class="stat"><%= @user.followers.count %></strong><br>
    <%= t("users.followers") %>
  <% end %>
</div>
